{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2020",                     // Modern JS target
    "module": "nodenext",                   // Enable ES Module syntax
    "moduleResolution": "node",             // Node module resolution
    "rootDir": "./src",                     // Input directory
    "outDir": "./dist",                     // Output directory
    "esModuleInterop": true,                // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,                         // Enable all strict type-checking options

    /* Additional Checks */
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,                // Each file is an isolated module

    /* Emit Options */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    /* JSX Support (if needed for any TSX in backend) */
    "jsx": "preserve",

    /* Module Features */
    "verbatimModuleSyntax": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
